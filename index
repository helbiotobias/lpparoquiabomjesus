const CampaignCard = ({ title, subtitle, items, buttonText, isPrimary = false, icon: Icon }) => (
  <div className={`flex flex-col h-full rounded-sm overflow-hidden transition-all duration-300 ${
    isPrimary 
      ? 'bg-[#2E5D34] text-white shadow-2xl scale-105 ring-4 ring-[#EAB308]/30 relative z-10' 
      : 'bg-white text-[#1C1917] shadow-lg border-t-4 border-[#C05832]'
  }`}>
    {isPrimary && (
      <div className="bg-[#EAB308] text-[#1A3C20] text-center py-2 text-xs font-bold uppercase tracking-widest font-sans">
        Foco do Momento
      </div>
    )}
    
    <div className="p-8 flex flex-col h-full">
      <div className={`w-16 h-16 rounded-full flex items-center justify-center mb-6 text-2xl shadow-sm ${
        isPrimary ? 'bg-white/10 text-[#EAB308]' : 'bg-stone-100 text-[#C05832]'
      }`}>
        <Icon size={32} />
      </div>

      <h3 className={`text-2xl font-bold mb-2 font-cinzel ${isPrimary ? 'text-white' : 'text-[#2E5D34]'}`}>{title}</h3>
      <p className={`text-sm mb-8 font-sans ${isPrimary ? 'text-white/70' : 'text-stone-500'}`}>
        {subtitle}
      </p>

      <ul className="space-y-4 mb-8 flex-grow">
        {items.map((item, idx) => (
          <li key={idx} className="flex items-start gap-3 text-sm font-sans">
            <span className={`mt-1.5 w-1.5 h-1.5 rounded-full shrink-0 ${
              isPrimary ? 'bg-[#EAB308]' : 'bg-[#C05832]'
            }`}></span>
            <span className={isPrimary ? 'text-white/90' : 'text-stone-600'}>{item}</span>
          </li>
        ))}
      </ul>

      <button className={`w-full py-4 rounded-sm font-bold text-sm transition-all flex items-center justify-center gap-2 uppercase tracking-wide ${
        isPrimary 
          ? 'bg-[#C05832] text-white hover:bg-[#A04625]' 
          : 'bg-[#1C1917] text-white hover:bg-[#333]'
      }`}>
        {buttonText} <ArrowRight size={16} />
      </button>
    </div>
  </div>
);

