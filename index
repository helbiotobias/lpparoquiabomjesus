// --- Constantes de Estilo ---
const COLORS = {
  primary: '#C05832', // Terracota/Tijolo (Acento/Botões)
  primaryHover: '#A04625',
  green: '#2E5D34', // Verde Institucional
  greenDark: '#1A3C20', // Verde Escuro
  greenLight: '#F2F7F4', // Fundo claro esverdeado
  accent: '#EAB308', // Dourado
  bgLight: '#FAFAF9', // Stone-50
  textDark: '#1C1917', // Stone-900
};

// --- Componentes ---

// Componente Timer Flutuante
const FloatingCountdown = () => {
  const [timeLeft, setTimeLeft] = useState({ days: 0, hours: 0, minutes: 0, seconds: 0 });

  useEffect(() => {
    // Data alvo: Páscoa 2026 (05 de Abril de 2026) - Fim da Campanha
    const targetDate = new Date('2026-04-05T00:00:00');

    const calculateTimeLeft = () => {
      const now = new Date();
      const difference = targetDate - now;

      if (difference > 0) {
        setTimeLeft({
          days: Math.floor(difference / (1000 * 60 * 60 * 24)),
          hours: Math.floor((difference / (1000 * 60 * 60)) % 24),
          minutes: Math.floor((difference / 1000 / 60) % 60),
          seconds: Math.floor((difference / 1000) % 60),
        });
      } else {
        // Campanha encerrada
        setTimeLeft({ days: 0, hours: 0, minutes: 0, seconds: 0 });
      }
    };

    const timer = setInterval(calculateTimeLeft, 1000);
    calculateTimeLeft(); // Executa imediatamente

    return () => clearInterval(timer);
  }, []);

  return (
    <div className="fixed bottom-4 left-1/2 transform -translate-x-1/2 z-40 w-[95%] md:w-auto">
      <div className="bg-[#1A3C20]/95 backdrop-blur-md text-white px-6 py-3 rounded-full shadow-2xl border border-[#EAB308]/30 flex items-center justify-between md:justify-center gap-4 md:gap-8">
        
        <div className="flex items-center gap-2">
          <Clock size={18} className="text-[#EAB308] animate-pulse" />
          <span className="text-xs md:text-sm font-sans uppercase tracking-widest text-white/80 hidden sm:inline-block">
            Fim da Campanha em:
          </span>
           <span className="text-xs md:text-sm font-sans uppercase tracking-widest text-white/80 sm:hidden">
            Restam:
          </span>
        </div>

        <div className="flex gap-3 md:gap-4 font-cinzel text-center">
          <div>
            <span className="block text-lg md:text-xl font-bold text-[#EAB308] leading-none">{String(timeLeft.days).padStart(2, '0')}</span>
            <span className="text-[10px] uppercase text-white/60">Dias</span>
          </div>
          <div className="text-white/30 text-lg font-light">:</div>
          <div>
            <span className="block text-lg md:text-xl font-bold text-white leading-none">{String(timeLeft.hours).padStart(2, '0')}</span>
            <span className="text-[10px] uppercase text-white/60">Horas</span>
          </div>
          <div className="text-white/30 text-lg font-light">:</div>
          <div>
            <span className="block text-lg md:text-xl font-bold text-white leading-none">{String(timeLeft.minutes).padStart(2, '0')}</span>
            <span className="text-[10px] uppercase text-white/60">Min</span>
          </div>
          <div className="text-white/30 text-lg font-light hidden sm:block">:</div>
          <div className="hidden sm:block">
            <span className="block text-lg md:text-xl font-bold text-[#C05832] leading-none">{String(timeLeft.seconds).padStart(2, '0')}</span>
            <span className="text-[10px] uppercase text-white/60">Seg</span>
          </div>
        </div>

        <a href="#como-ajudar" className="hidden md:flex bg-[#C05832] hover:bg-[#A04625] text-white text-xs font-bold px-4 py-2 rounded-full transition-colors uppercase tracking-wider items-center gap-1">
          Doar <ArrowRight size={12} />
        </a>
      </div>
    </div>
  );
};

const Header = () => {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [scrolled, setScrolled] = useState(false);

  useEffect(() => {
    const handleScroll = () => setScrolled(window.scrollY > 20);
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const navLinks = [
    { name: 'Campanha 40 Dias', href: '#quaresma' },
    { name: 'Produtos', href: '#produtos' },
    { name: 'Clube São José', href: '#sao-jose' },
    { name: 'O Projeto', href: '#projeto' },
    { name: 'Como Ajudar', href: '#como-ajudar' },
  ];

  return (
    <header 
      className={`fixed w-full z-50 transition-all duration-300 ${
        scrolled ? 'bg-[#2E5D34]/95 backdrop-blur-sm shadow-md py-3' : 'bg-transparent py-5'
      }`}
    >
      <div className="container mx-auto px-4 md:px-6 flex justify-between items-center">
        <div className="flex items-center gap-3">
          <div className="bg-white/10 p-2 rounded-full backdrop-blur-sm">
             <Church className="w-6 h-6 text-[#EAB308]" />
          </div>
          <div className="flex flex-col text-white">
            <span className="font-cinzel font-bold text-lg md:text-xl leading-none tracking-wide">
              Nova Paróquia
            </span>
            <span className="text-[10px] uppercase tracking-[0.2em] opacity-80 font-sans">
              Senhor Bom Jesus
            </span>
          </div>
        </div>

        {/* Desktop Nav */}
        <nav className="hidden md:flex items-center gap-6 lg:gap-8">
          {navLinks.map((link) => (
            <a 
              key={link.name}
              href={link.href}
              className="text-sm font-sans font-medium text-white/90 hover:text-[#EAB308] transition-colors tracking-wide"
            >
              {link.name}
            </a>
          ))}
          <a 
            href="#como-ajudar"
            className="px-6 py-2.5 rounded-sm font-bold text-white text-sm transition-all hover:translate-y-[-2px] shadow-lg flex items-center gap-2 border border-[#EAB308]/30"
            style={{ backgroundColor: COLORS.primary }}
          >
            <Heart size={16} className="fill-current" /> DOAR AGORA
          </a>
        </nav>

        {/* Mobile Menu Button */}
        <button 
          className="md:hidden p-2 text-white"
          onClick={() => setIsMenuOpen(!isMenuOpen)}
        >
          {isMenuOpen ? <X /> : <Menu />}
        </button>
      </div>

      {/* Mobile Nav */}
      {isMenuOpen && (
        <div className="md:hidden absolute top-full left-0 w-full bg-[#1A3C20] shadow-xl border-t border-white/10 animate-in slide-in-from-top-5">
          <div className="flex flex-col p-6 space-y-4">
            {navLinks.map((link) => (
              <a 
                key={link.name}
                href={link.href}
                className="text-white/80 font-cinzel text-lg hover:text-[#EAB308] border-b border-white/5 pb-2"
                onClick={() => setIsMenuOpen(false)}
              >
                {link.name}
              </a>
            ))}
            <a 
              href="#como-ajudar"
              className="w-full text-center py-3 rounded-sm font-bold text-white flex justify-center items-center gap-2 mt-4"
              style={{ backgroundColor: COLORS.primary }}
              onClick={() => setIsMenuOpen(false)}
            >
              <Heart size={18} /> DOAR AGORA
            </a>
          </div>
        </div>
      )}
    </header>
  );
};

