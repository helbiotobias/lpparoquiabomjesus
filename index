// Nova Seção: Produtos da Campanha Quaresma
const LentenCampaignSection = () => {
  const [activeShirtIndex, setActiveShirtIndex] = useState(0);

  const shirts = [
    {
      id: 1,
      name: "Modelo 'Fé e Obras' - Verde",
      color: "bg-[#2E5D34]",
      textColor: "text-white",
      description: "Estampa exclusiva com o brasão em dourado sobre o verde litúrgico.",
      image: "assets/camiseta-verde.jpeg"
    },
    {
      id: 2,
      name: "Modelo 'Penitência' - Roxo",
      color: "bg-[#4C1D95]", // Roxo da Quaresma
      textColor: "text-white",
      description: "A cor da conversão e preparação. Ideal para viver o tempo da Quaresma.",
      image: "assets/camiseta-roxa.jpeg"
    },
    {
      id: 3,
      name: "Modelo 'Luz do Mundo' - Branca",
      color: "bg-[#F5F5F4]",
      textColor: "text-[#1C1917]",
      description: "Design minimalista e elegante para o dia a dia, com detalhes em dourado.",
      image: "assets/camiseta-branca.jpeg"
    }
  ];

  const nextShirt = () => {
    setActiveShirtIndex((prev) => (prev + 1) % shirts.length);
  };

  const prevShirt = () => {
    setActiveShirtIndex((prev) => (prev === 0 ? shirts.length - 1 : prev - 1));
  };

  return (
    <section id="produtos" className="py-24 bg-white relative">
      <div className="container mx-auto px-4">
        <div className="text-center mb-16">
          <div className="inline-flex items-center justify-center p-2 bg-[#2E5D34]/10 rounded-full mb-4">
            <Shirt className="text-[#2E5D34] w-6 h-6" />
          </div>
          <h2 className="text-4xl md:text-5xl font-cinzel font-bold text-[#1A3C20] mb-4">
            Vista a Camisa
          </h2>
          <p className="text-stone-600 max-w-2xl mx-auto text-lg font-serif italic">
            "Sinal visível do nosso compromisso. Adquira os produtos oficiais e ajude a divulgar nossa obra."
          </p>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 max-w-5xl mx-auto">
          
          {/* Card: Camiseta (Carrossel) */}
          <div className="group relative bg-[#F2F7F4] rounded-sm overflow-hidden border border-stone-200 hover:border-[#C05832] transition-all duration-300 flex flex-col shadow-lg">
            <div className="absolute top-4 right-4 z-10 bg-[#EAB308] text-[#1A3C20] text-xs font-bold px-3 py-1 uppercase tracking-widest rounded-sm shadow-md">
              3 Opções Disponíveis
            </div>
            
            {/* Área do Carrossel */}
            <div className={`h-96 relative flex items-center justify-center transition-colors duration-500 ease-in-out ${shirts[activeShirtIndex].color} overflow-hidden`}>
              
              {/* Botões de Navegação */}
              <button 
                onClick={prevShirt}
                className="absolute left-4 z-20 p-2 rounded-full bg-black/20 text-white hover:bg-black/40 transition-colors backdrop-blur-sm"
              >
                <ChevronLeft size={24} />
              </button>
              <button 
                onClick={nextShirt}
                className="absolute right-4 z-20 p-2 rounded-full bg-black/20 text-white hover:bg-black/40 transition-colors backdrop-blur-sm"
              >
                <ChevronRight size={24} />
              </button>

              {/* Imagem da Camiseta */}
              <div className="relative w-full h-full flex items-center justify-center p-8 animate-in fade-in zoom-in duration-300">
                 <img 
                    src={shirts[activeShirtIndex].image} 
                    alt={shirts[activeShirtIndex].name}
                    className="max-h-full max-w-full object-contain drop-shadow-2xl hover:scale-105 transition-transform duration-500"
                    key={activeShirtIndex} // Força re-render para animação
                 />
                 
                 <span className="absolute bottom-16 text-xs font-cinzel font-bold uppercase tracking-widest opacity-90 bg-black/40 text-white px-4 py-1.5 rounded-full backdrop-blur-sm">
                   Opção {activeShirtIndex + 1} de 3
                 </span>
              </div>

              {/* Indicadores (Bolinhas) */}
              <div className="absolute bottom-6 flex gap-2 z-20">
                {shirts.map((_, idx) => (
                  <button 
                    key={idx}
                    onClick={() => setActiveShirtIndex(idx)}
                    className={`w-2.5 h-2.5 rounded-full transition-all shadow-sm ${
                      idx === activeShirtIndex ? 'bg-white scale-125' : 'bg-white/40 hover:bg-white/60'
                    }`}
                  />
                ))}
              </div>
            </div>
            
            <div className="p-8 flex flex-col flex-grow bg-white">
              <div className="mb-4">
                 <h3 className="font-cinzel text-2xl font-bold text-[#1A3C20]">Camiseta Oficial 2026</h3>
